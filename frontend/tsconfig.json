{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src", 
    "paths": {
      "@/*": ["*"]                      
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/app/pages/auth/SellerLoginPage.jsx", "src/app/pages/auth/SellerSignupPage.jsx", "src/app/pages/auth/UserLoginPage.jsx", "src/app/pages/auth/UserSignupPage.jsx", "src/app/pages/BrowseProductsPage.jsx", "src/app/pages/CategoryPage.jsx", "src/app/pages/ContactPage.jsx", "src/app/pages/FeedbackPage.jsx", "src/app/pages/HomePage.jsx", "src/app/pages/NotFoundPage.jsx", "src/app/pages/ProductDetailsPage.jsx", "src/app/pages/ThankYouPage.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
